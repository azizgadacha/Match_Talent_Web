{% extends 'base1.html.twig' %}



{% block body %}

    <table class="table">
        <br>

        <h1><i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>Liste des utilisateurs </h1>
        <thead>
            <tr>
                <th>Id</th>

                <th>Username</th>
                <th>Address</th>

                <th>Email</th>
                <th>Contact</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.id }}</td>

                <td>{{ utilisateur.username }}</td>
                <td>{{ utilisateur.address }}</td>
                <td>{{ utilisateur.email }}</td>
                <td>{{ utilisateur.contact }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
