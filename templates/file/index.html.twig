{% extends 'base.html.twig' %}

{% block title %}File index{% endblock %}

{% block body %}
    <main>




      <section class="job-category section-padding">
            <div class="container">


                <div class="row">
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        {% for file in files %}
                        <div class="single-cat">
                            <div class="cat-icon">
                                <img src="{{asset('assets/img/icon/top-cat1.svg')}}" alt="">
                            </div>
                            <div class="cat-cap">
                                <h5><a href="#">Files</a></h5>
                                <p>{{ file.namecv }}</p>
                                <a href="{{ path('app_file_show', {'idFile': file.idFile}) }}" class="boxed-btn3">show</a>
                                <a href="{{ path('app_file_edit', {'idFile': file.idFile}) }}" class="boxed-btn3">edit</a>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                </div>
            </div>
        </section>






    <a href="{{ path('app_file_new') }}" class="boxed-btn3">Create new</a>
    </main>
{% endblock %}
