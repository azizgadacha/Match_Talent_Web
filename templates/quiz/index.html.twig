{% extends 'base.html.twig' %}

{% block title %}Quiz index{% endblock %}

{% block body %}
<div class="slider-area gray-bg position-relative">
<div class="single-slider d-flex align-items-center slider-height2">
<div class="container">
<div class="row">
<div class="col-xl-12">
<div class="hero-caption hero-caption2">
<h2>Quiz</h2>
</div>
</div>
</div>
</div>
</div>
</div>
    

    <table class="table">
        <thead>
            <tr>
                <th>IdQuiz</th>
                <th>NombreQuestions</th>
                <th>Barem</th>
                <th>SujetQuiz</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quiz in quizzes %}
            <tr>
                <td>{{ quiz.idQuiz }}</td>
                <td>{{ quiz.nombreQuestions }}</td>
                <td>{{ quiz.barem }}</td>
                <td>{{ quiz.sujetQuiz }}</td>
                <td>
                    <a href="{{ path('app_quiz_show', {'idQuiz': quiz.idQuiz}) }}">show</a>
                    <a href="{{ path('app_quiz_edit', {'idQuiz': quiz.idQuiz}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_quiz_new') }}">Create new</a>
{% endblock %}
